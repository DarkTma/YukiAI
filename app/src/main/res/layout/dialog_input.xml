<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_dialogue_style"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/dialogueTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Сообщение для Юки"
        android:textColor="#75c3ff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_input_field"
        android:gravity="top|start"
        android:hint="Напиши что-нибудь для Юки."
        android:inputType="textMultiLine"
        android:lines="3"
        android:maxLines="5"
        android:minLines="3"
        android:padding="12dp"
        android:scrollbars="vertical"
        android:textColor="@android:color/white"
        android:textColorHint="#80FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sayButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#75c3ff"
            android:text="Сказать"
            android:textColor="#000000"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/voice_input"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Голосовой ввод"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_mic_24"
            app:tint="#75c3ff" />

    </LinearLayout>

</LinearLayout>