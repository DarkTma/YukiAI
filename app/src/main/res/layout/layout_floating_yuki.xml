<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/floating_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:clipChildren="false"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/yuki_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-10dp"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@+id/yuki_head"
        android:layout_alignBottom="@+id/yuki_head"
        android:background="@drawable/bg_dialogue_style"
        android:elevation="6dp"
        android:padding="12dp"
        android:text="Мм... ход конём ✨"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/yuki_head"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:elevation="8dp"
        android:src="@drawable/shiro_chibi" />

    <ImageView
        android:id="@+id/btn_close_floating"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignTop="@+id/yuki_head"
        android:layout_alignEnd="@+id/yuki_head"
        android:translationX="5dp"
        android:translationY="-5dp"
        android:background="@drawable/bg_close_circle"
        android:elevation="10dp"
        android:padding="4dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel" />

</RelativeLayout>